class APIClient {
  constructor(apiKey) {
    this.apiKey = apiKey;
    this.baseURL = 'https://api.example.com/v1';
  }

  async getUsers() {
    try {
      const response = await axios.get(`${this.baseURL}/users`, {
        headers: { 'Authorization': `Bearer ${this.apiKey}` }
      });
      return response.data;
    } catch (error) {
      console.error('API Error:', error.message);
      throw error;
    }
  }
}

